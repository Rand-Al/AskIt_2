<%= render 'shared/errors', object: @question %>

<%= form_with model: @question, html: {class: 'form' } do |f| %>
  <div class="form__line">
    <%= f.label :title,'Question Title', class: 'form__label'%>
    <%= f.text_field :title, placeholder: 'Title', class: 'form__input' %>
  </div>

  <div class="form__line">
    <div class="form__wrapper">
      <%= f.label :body, 'Enter text', class: 'form__label' %>
    </div>
    <div class="form__wrapper">
      <%= f.text_area :body, class: 'form__text' %>
    </div>
  </div>

  <div class="form__line">
    <%= f.submit 'Submit', class: 'form__button' %>
  </div>

<% end %>